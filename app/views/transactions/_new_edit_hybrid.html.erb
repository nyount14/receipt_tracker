<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @transaction %>
            <%= form_with(model: @transaction, local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :amount, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :amount, class: "form-control" %>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <%= f.label :category, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.select :category, ["fun", "food", "fuel", "gifts", "misc"], class: "custom-select" %>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <%= f.label :date, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.date_field :date, class: "form-control" %>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <%= f.label :payment_method, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.select :payment_method, ["cash", "Amazon CC", "Freedom CC"], class: "custom-select" %>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :description, class: "form-control" %>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <%= f.submit "Add transaction", class: "col-2 btn btn-outline-success" %>
                </div>

            <% end %>
            
            <br>
            <%= link_to 'Cancel edit and return to list of transactions', transactions_path(@transaction) %>
        </div>
    </div>
</div>