<h1 class="text-center mt-4">List of Transactions</h1>

<table>
    <thead>
        <tr>
            <th>Amount</th>
            <th>Type</th>
            <th>Category</th>
            <th>Date</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @transactions.each do |transaction| %>
            <tr>
                <td><%= number_to_currency(transaction.amount) %></td>
                <td><%= transaction.t_type %></td>
                <td><%= transaction.category %></td>
                <td><%= transaction.date %></td>
                <td><%= link_to 'Show', transaction_path(transaction) %></td>
                <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
                <td><%= link_to 'Delete', transaction_path(transaction), method: :delete, data: { confirm: "Are you sure you want to delete?"} %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<br>
<%= link_to "Add a transaction", new_transaction_path %>
            

    
