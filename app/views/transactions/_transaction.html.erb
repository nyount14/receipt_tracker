<div class="container mt-5">            
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Type</th>
        <th>Category</th>
        <th>Amount</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
        <% @transactions.each do |transaction| %>
          <% if transaction.user %>
            <td>added by <%= link_to transaction.user.username, user_path(transaction.user) %></td> 
          <% end %>
            <td><%= transaction.date %></td>
            <td><%= transaction.t_type %></td>
            <td><%= transaction.category %></td> 
            <td><%= number_to_currency(transaction.amount) %></td>
            <td><%= link_to 'Details', transaction_path(transaction) %></td>
            <% if logged_in? && transaction.user == current_user %>
              <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
              <td><%= link_to 'Delete', transaction_path(transaction), method: :delete, data: { confirm: "Are you sure you want to delete?"} %></td>
            <% end %>
          </tr>
        <% end %> 
    </tbody>
  </table>
</div>