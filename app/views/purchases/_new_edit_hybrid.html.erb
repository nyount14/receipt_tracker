<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-8">
            <%= form_with(model: @purchase, local: true) do |f| %>
                <div class="d-flex flex-row justify-content-center mb-3">
                    <%= f.label :amount, class: "p-2 col-form-label" %>
                    <%= f.text_field :amount, class: "form-control" %>
                </div>
                <div class="d-flex flex-row justify-content-center mb-3">
                    <%= f.label :category, class: "p-2 col-form-label" %>
                    <%= f.select :category, ["", "fun", "food", "fuel", "gifts", "misc"], class: "custom-select" %>
                </div>
                <div class="d-flex flex-row justify-content-center mb-3">
                    <%= f.label :date, class: "p-2 col-form-label" %>
                    <%= f.date_field :date, class: "form-control" %>
                </div>
                <div class="d-flex flex-row justify-content-center mb-3">
                    <%= f.label :payment_method, class: "p-2 col-form-label" %>
                    <%= f.select :payment_method, ["", "cash", "Amazon CC", "Freedom CC"], class: "custom-select" %>
                </div>
                <div class="d-flex flex-row justify-content-center mb-3">
                    <%= f.label :description, class: "p-2 col-form-label" %>
                    <%= f.text_field :description, class: "form-control" %>
                </div>
                <div class="d-flex flex-row justify-content-center mb-3">
                    <%= f.label :reason, class: "p-2 col-form-label" %>
                    <%= f.collection_select :reason_ids, Reason.order(:option), :id, :option, { prompt: "Select one or more from the list below (can leave blank)" }, { multiple: true, class: "custom-select" } %>
                </div>
                <div class="d-flex flex-row justify-content-center mb-3">
                    <%= f.submit(@purchase.new_record? ? "add purchase" : "update purchase", class: "p-2 btn btn-outline-success") %>
                </div>
            <% end %>
            <div class="d-flex flex-row justify-content-center mb-3">
            <%= link_to 'Cancel and return to your dashboard', user_path(current_user) %>
            </div>
            </div>
            </div>
            </div> 
        </div>
    </div>     
</div>

            