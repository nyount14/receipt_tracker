<div class="d-inline-flex flex-row mb-3 center-form">

<%= form_with(model: @purchase, local: true) do |f| %>
        <div class="p-2">
            <%= f.label :amount, class: "form-label" %>
            <%= f.text_field :amount, class: "form-control" %>
        </div>
        <div class="p-2">
            <%= f.label :category, class: "form-label" %>
            <%= f.select :category, ["", "fun", "food", "fuel", "gifts", "misc"], class: "custom-select" %>
        </div>
        <div class="p-2">
            <%= f.label :date, class: "form-label" %>
            <%= f.date_field :date, class: "form-control" %>
        </div>
        <div class="p-2">
            <%= f.label :payment_method, class: "col-form-label" %>
            <%= f.select :payment_method, ["", "cash", "Amazon CC", "Freedom CC"], class: "custom-select" %>
        </div>
        <div class="p-2">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_field :description, class: "form-control" %>
        </div>
        <div class="p-2">
            <%= f.label :reason, class: "form-label" %>
            <%= f.collection_select :reason_ids, Reason.order(:option), :id, :option, { prompt: "Select one or more:" }, { multiple: true, class: "custom-select" } %>
        </div>
        <div class="d-flex flex-row justify-content-center mb-3">
            <%= f.submit(@purchase.new_record? ? "add purchase" : "update purchase", class: "btn btn-outline-success") %>
        </div>
        <div class="d-flex flex-row justify-content-center mb-3">
        <%= link_to 'Cancel and return to your dashboard', user_path(current_user) %>
        </div>
    <% end %>
</div>
</div>
</div>    
</div>  


            