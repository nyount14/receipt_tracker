<h1 class="text-center mt-4">Individual Purchase</h1>
    <div class="container mt-5">
        <div class="card text-center">
        <div class="card-header">Username:
        <% if @purchase.user %>
            <%= link_to @purchase.user.username, user_path(@purchase.user) %>
        <% end %>
        </div>
        <div class="card-body">
            <h5 class="card-title">Amount: <%= @purchase.amount %></h5>
            <p class="card-text">Date: <%= @purchase.date %></p>
            <p class="card-text">Description: <%= @purchase.description %></p>
        </div>
        <div class="card-footer text-muted">
        <% if logged_in? && @purchase.user == current_user %>
            <%= link_to 'Edit', edit_purchase_path(@purchase), class: "btn btn-outline-success" %> |
            <%= link_to 'Delete', purchase_path(@purchase), method: :delete, data: { confirm: "Are you sure you want to delete?"}, class: "btn btn-outline-danger" %> |
        <% end %>    
            <%= link_to 'Return to list of transactions', purchases_path(@purchase), class: "btn btn-outline-primary" %>
        </div>
    </div>
</div>
            
        
   