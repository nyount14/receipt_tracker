<h1 class="text-center mt-4">Login to Virtual Wallet</h1>

<div class="row justify-content-center mt-5">
    <div class="col-10">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
            <div class="form-group row">
                <%= f.label :email, class: "col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :password, class: "col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.submit "Login", class: "col-2 btn btn-outline-success" %>
            </div>

        <% end %>
        
        <br>
        <%= link_to 'Cancel edit and return to list of transactions', purchases_path(@purchase) %>
    </div>
</div>