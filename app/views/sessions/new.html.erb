
 <div class= "page-size">
 
 <div id="overlay">
 
 <div class="row justify-content-center">
 <div class="col-8">
 <h1 class="text-center mt-5">Login to Virtual Wallet</h1>
    <div class="d-flex flex-column p-2">
        <div class="mt-5">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
            <div class="d-flex flex-row justify-content-center mb-3">
                <%= f.label :email, class: "p-2" %>
                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
            </div>
            <div class="d-flex flex-row justify-content-center mb-3">
                <%= f.label :password, class: "p-2" %>
                <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>
            <div class="d-flex flex-row justify-content-center">
                <%= f.submit "Login", class: "mt-3 btn btn-outline-success" %>
        </div>
        <% end %>
        </div>
    </div>
</div>
</div>
</div>
</div> 



