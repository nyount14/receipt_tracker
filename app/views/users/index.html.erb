<h1 class="text-center mt-4">Virtual Wallet Clientele</h1>

<div class="container mt-5">            
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Email</th>
        <th>Date Joined</th>
      </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
                <td><%= link_to user.username, user %></td> 
                <td><%= user.email %></td>
                <td>Joined <%= time_ago_in_words(user.created_at) %></td>
            </tr>
        <% end %> 
    </tbody>
  </table>
</div>