<h1 class="text-center mt-4"><%= @user.username %>'s Profile</h1>
<div class="apple_pagination mt-3">
        <%= will_paginate @transactions, :container => false %>
</div>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
    <% if logged_in? && @user == current_user %>
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-success" %>
    <% end %>
</div>

<h3 class="text-center mt-5"><%= @user.username %>'s Transactions</h3>

<%= render 'transactions/transaction' %>