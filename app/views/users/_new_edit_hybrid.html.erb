<div class="row justify-content-center">
    <div class="col-8">
        <div class="d-flex flex-column p-2">
            <div class="mt-5">
                <%= form_with(model: @user, local: true) do |f| %>
                    <div class="d-flex flex-row justify-content-center mb-3">
                        <%= f.label :username, class: "p-2" %>
                        <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
                    </div>
                    <div class="d-flex flex-row justify-content-center mb-3">
                        <%= f.label :email, class: "p-2" %>
                        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
                    </div>    
                    <div class="d-flex flex-row justify-content-center mb-3">
                        <%= f.label :password, class: "p-2" %>
                        <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
                    </div>
                    <div class="d-flex flex-row justify-content-center mb-3">
                        <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "mt-3 btn btn-outline-success") %>
                    </div>
                <% end %>
                </div>
            </div>
        </div>
    </div>
</div>





