<h1 class="text-center mt-4"><%= @budget.user.username %>'s budget</h1>
    <div class="container-fluid mt-5">
        <div class="card text-center">
        <div class="card-header">Username:
        <% if @budget.user %>
            <%= link_to @budget.user.username, user_path(@budget.user) %>
        <% end %>
        </div>
        <div class="card-body">
            <h5 class="card-title">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Food</th>
                        <th>Fuel</th>
                        <th>Fun</th>
                        <th>Gifts</th>
                        <th>Misc</th>
                    </tr>
                    </thead>
                    <tbody>
                        <td><%= number_to_currency(@budget.food) %></td>
                        <td><%= number_to_currency(@budget.fuel) %></td>
                        <td><%= number_to_currency(@budget.fun) %></td>
                        <td><%= number_to_currency(@budget.gifts) %></td>
                        <td><%= number_to_currency(@budget.misc) %></td>
                    </tbody>
                </table>
            </h5>
        </div>
        <div class="card-footer text-muted">
        <% if logged_in? && @budget.user == current_user %>
            <%= link_to 'Edit a budget amount', edit_budget_path(@budget), class: "btn btn-outline-success" %>
        <% end %>    
        </div>
    </div>
</div>